CREATE VIEW order_summary AS
SELECT 
    o.order_id,
    o.customer_name,
    o.order_date,
    o.status,
    o.total_amount,
    COUNT(oi.order_item_id) as total_items
FROM orders o
JOIN order_items oi ON o.order_id = oi.order_id
GROUP BY o.order_id, o.customer_name, o.order_date, o.status, o.total_amount; 
